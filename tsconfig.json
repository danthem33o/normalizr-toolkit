{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2016",                         
    "module": "commonjs",                     
    "jsx": "react",                           
    "sourceMap": true,                        
    
    "noImplicitAny": false,                   
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,

    "resolveJsonModule": true,

    "esModuleInterop": true,

    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./public/**/*"
  ]
}